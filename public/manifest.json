{
  "manifest_version": 3,

  "name": "VerifyPage",
  "description": "Chrome Extension, TypeScript",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/content_script.js", "js/verifier_content_script.js"]
      }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "storage",
    "activeTab",
    "cookies"
  ],

  "host_permissions": [
    "*://*/*"
  ]
}
