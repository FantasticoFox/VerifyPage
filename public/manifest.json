{
  "manifest_version": 3,

  "name": "VerifyPage",
  "description": "Chrome Extension, TypeScript",
  "version": "1.0",

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "run_at": "document_end",
          "js": ["content_script.js"]
      }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "storage",
    "unlimitedStorage",
    "cookies",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
